<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">

    <ImageView
        android:id="@+id/imageAnhtacgia"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/xuandieu"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageAnhtacgia"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewTentacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuân Diệu"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bút danh là Trảo Nha" />

    </LinearLayout>
</RelativeLayout>